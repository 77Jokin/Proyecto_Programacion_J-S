<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
<persistence-unit name="my_app" transaction-type="RESOURCE_LOCAL">
	<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
	<class>modelo.entidades.Region</class>
	<class>modelo.entidades.Country</class>

<properties>
	<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
	<property name="javax.persistence.jdbc.user" value="root"/>
	<property name="javax.persistence.jdbc.password" value="AlumnoIFP"/>
	<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/mysql_hr?serverTimezone=UTC"/>
	<property name="hibernate.show_sql" value="true"/>
	<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
	<property name="hibernate.format_sql" value="false"/>
	<property name="log4j.logger.org.hibernate.type" value="WARNING"/>
</properties>
</persistence-unit>
</persistence>
